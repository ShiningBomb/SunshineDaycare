<%= simple_form_for [:manager,@program,@weekly_schedule,@daily_schedule,@activity] do |f| %>
  <%= f.input :name %>
  <%= f.association :caretaker %>
  <%= f.input :location, collection: Activity.locations.keys %>
  <%= f.input :category, collection: Activity.categories.keys %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.button :submit, class: 'btn btn-primary'  %>
<% end %>
