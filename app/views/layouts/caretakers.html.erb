<!DOCTYPE html>
<html>
  <head>
    <title>SunshineDaycare</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-yellow">
        <div class="container">
          <%= link_to caretakers_root_path do%>
            <div class="navbar-brand">Sunshine Daycare</div>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/caretakers/posts">Posts</a>
              </li>
            </ul>
          </div>
          <ul class="navbar-nav navbar-right">
            <% if caretaker_signed_in? %>
              <li class="nav-item">
                <a class="nav-link" href="#">Logged in as <%= current_caretaker.email %></a>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to "Logout", destroy_caretaker_session_path(), method:"delete", class:"nav-link" %>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <% if notice %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning" role="alert">
        <%= alert %>
      </div>
    <% end %>
      <%= yield %>
  </body>
</html>
